<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiwayatCustomerActivity"
    android:background="#8aa4ca">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear_layout1"
            android:background="#24549c">
            <ImageButton
                android:id="@+id/btnBackFromRiwayatCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#24549c"
                android:src="@drawable/ic_baseline_arrow_back_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                style="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:text="Riwayat Transaksi Customer"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_riwayat_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout1"
            tools:listitem="@layout/item_riwayat_customer" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>